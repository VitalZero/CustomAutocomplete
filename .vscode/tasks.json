{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Resource compile",
			"command": "rc.exe",
			"args": [
				"resource.rc"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"type": "shell",
			"label": "C/C++: cl.exe build active file",
			"command": "cl.exe",
			"args": [
				"/Zi",
				"/EHsc",
				"/Fe:",
				"${fileDirname}\\main.exe",
				"*.cpp",
				"resource.res",
				"Ole32.lib",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOrder":"sequence",
			"dependsOn": "Resource compile",
		}
	]
}